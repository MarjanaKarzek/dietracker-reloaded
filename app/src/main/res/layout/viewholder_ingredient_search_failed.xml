<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ingredient_summary"
            style="@style/Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:textColor="@color/textPrimary"
            tools:text="120g Butter" />

        <ImageButton
            android:id="@+id/action_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:src="@drawable/ic_search_accent" />

        <ImageButton
            android:id="@+id/action_barcode_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:src="@drawable/ic_barcode_accent" />

        <ImageButton
            android:id="@+id/action_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:src="@drawable/ic_delete_accent" />

    </LinearLayout>

    <TextView
        android:id="@+id/fail_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_layout"
        tools:text="shfhsjdfhjs"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        style="@style/Caption"
        android:textColor="@color/delete"/>

</android.support.constraint.ConstraintLayout>