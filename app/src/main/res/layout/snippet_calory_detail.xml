<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calories"
        android:textAlignment="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/circle_progress_bar_calories"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:cpb_background_progressbar_color="@color/colorAccentLight"
            app:cpb_background_progressbar_width="3dp"
            app:cpb_progress="0"
            app:cpb_progressbar_color="@color/colorAccent"
            app:cpb_progressbar_width="6dp" />

        <TextView
            android:id="@+id/circle_progress_bar_calories_value"
            style="@style/Headline1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            tools:text="50" />

    </FrameLayout>

    <TextView
        android:id="@+id/circle_progress_bar_calories_max_value"
        style="@style/Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/textSecondary"
        tools:text="von 100" />

</LinearLayout>